{# @var id          \string #}
{# @var message     \string #}
{# @var value       \string #}
{# @var column      \string #}
{# @var placeHolder \string #}
{# @var icon        \string #}
{# @var range       \array  #}
<section data-id="{{id}}">
    <div class="form-group input-group {% if message is not empty %}has-error{% endif %}" id="{{ column }}1">
        <span class="input-group-addon"><i class="{{ icon }}"></i> </span>
        <label class="control-label" for="{{ column }}">
            {% if message is not empty %}
                {{ message }}
            {% endif %}
        </label>
        <input type="text" class="form-control" id="{{ column }}" name="{{ column }}" placeholder="{{ placeholder }}" value="{{ value }}">
        <script type="text/javascript">
            $(function () {
                $('#' + '{{  column }}1').datetimepicker();
            });
        </script>
    </div>
</section>