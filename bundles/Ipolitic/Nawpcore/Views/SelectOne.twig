{# @var message     \string #}
{# @var value       \string #}
{# @var column      \string #}
{# @var placeHolder \string #}
{# @var list        \array  #}
{# @var icon        \string #}
<div class="form-group input-group{% if message is not empty %} has-error{% endif %}">
    <span class="input-group-addon"><i class="fa fa-mail-reply"></i> </span>
    <label class="control-label" for="lastName">
        {% if message is not empty %}
            {{ message }}
        {% endif %}
    </label>
    <select class="form-control" name="{{ column }}" placeholder="{{ placeholder }}" value="{{ value }}">
        {% for key,value in list %}
            <option value="{{ key }}">{{ value }}</option>
        {% endfor %}
    </select>
</div>
