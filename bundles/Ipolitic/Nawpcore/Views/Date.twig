{# @var message \string #}
{# @var value \string #}
{# @var column \string #}
{# @var placeholder \string #}
{# @var icon  \string #}
<div class="form-group input-group{% if message is not empty %} has-error{% endif %}">
    <span class="input-group-addon"><i class="{{ icon }}"></i> </span>
    <label class="control-label" for="{{ column }}">
        {% if message is not empty %}
            {{ message }}
        {% endif %}
    </label>
    <input type="date" class="form-control" id="{{ column }}" name="{{ column }}" placeholder="{{ placeholder }}" value="{{ value }}">
</div>
