{# @var message     \string #}
{# @var icon        \string #}
{# @var value       \string #}
{# @var column      \string #}
{# @var placeHolder \string #}
{# @var humanField  \string #}
<section data-id="{{id}}">
    <div class="form-group input-group{% if message is not empty %} has-error{% endif %}">
        <span class="input-group-addon"><i class="fa fa-flag"></i> </span>
        <label class="control-label" for="country">
            {{ humanField }} (Country)
            {% if message is not empty %}
                {{ message }}
            {% endif %}
        </label>
        <select name="country" class="formField form-control gds-cr gds-countryflag" country-data-region-id="gds-cr-1"></select>
    </div>
    <div class="form-group input-group{% if message is not empty %} has-error{% endif %}">
        <span class="input-group-addon"><i class="{{ icon }}"></i> </span>
        <label class="control-label" for="lastName">
            {{ humanField }} (Region)
            {% if message is not empty %}
                {{ message }}
            {% endif %}
        </label>
        <select class="formField form-control" id="gds-cr-1"></select>
    </div>
    <div class="form-group input-group{% if message is not empty %} has-error{% endif %}">
        <span class="input-group-addon"><i class="fa fa-building"></i> </span>
        <label class="control-label" for="lastName">
            {% if message is not empty %}
                {{ message }}
            {% endif %}
        </label>
        <input class="formField form-control" type="test" id="gds-cr-1" placeholder="Your birth city">
    </div>
</section>