{# @var message     \string #}
{# @var icon        \string #}
{# @var value       \string #}
{# @var column      \string #}
{# @var placeHolder \string #}
<section data-id="{{id}}">
    <div class="form-group input-group{% if message is not empty %} has-error{% endif %}">
        <span class="input-group-addon"><i class="{{ icon }}"></i> </span>
        <label class="control-label" for="lastName">
            {{ column }}
            {% if message is not empty %}
                {{ message }}
            {% endif %}
        </label>
        <input type="text" class="form-control" name="{{ column }}_city" placeholder="City" value="City">
        <input type="text" class="form-control" name="{{ column }}_zip" placeholder="Zip" value="Zip">
        <input type="text" class="form-control" name="{{ column }}_country" placeholder="Country" value="City">

    </div>
</section>